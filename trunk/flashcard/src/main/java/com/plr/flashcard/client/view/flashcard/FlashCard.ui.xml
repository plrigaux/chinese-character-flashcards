<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d='urn:import:com.plr.flashcard.client.view.definition'>
	<ui:style type="com.plr.flashcard.client.view.flashcard.FlashCardStyle">
		.important {
			font-weight: bold;
		}
		
		.enabled {
			display: block;
		}
		
		.disabled {
			display: none;
		}
		
		.panel {
			text-align: center;
		}
		
		.button {
			margin: 0px 15px;
			width: 60px;
		}
		
		.showButton {
			width: 80%;
		}
		
		.definitionPanel {
			margin: 0px auto;
			text-align: left;
			width:80% 
		}
	</ui:style>
	<ui:with field='res' type='com.plr.flashcard.client.AppResources'/>
		
	<g:HTMLPanel styleName="{style.panel}">
	
		<div ui:field="showDiv" class="{style.enabled}">
			<g:Button ui:field="show" text="Show" />
		</div>
		<div ui:field="buttonsDiv" class="{style.disabled}">
			<g:Button ui:field="again" text="Again" />
			
			<g:Button ui:field="hard" text="Hard" />
			
			<g:Button ui:field="good" text="Good" />
			
			<g:Button ui:field="easy" text="Easy"  />
			
<!-- 			<g:Button ui:field="trivial" text="Trivial"  /> -->
		</div>

		<div>
			<g:Label ui:field="character" />
		</div>
		<div class="{style.definitionPanel}">
			<d:DefinitionPanel ui:field='definitionPanel'
				width="100%"  />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 