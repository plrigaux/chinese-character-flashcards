<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d='urn:import:com.plr.flashcard.client.view.definition'>
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<ui:style field='otherStyle' src="../../flashcard.css" />
		
	<g:HTMLPanel>
		<table width="100%" style="text-align:center">
			<tr>
				<td>
					<g:Button text="◀" ui:field="previous" />
				</td>
				<td>
					<g:Label ui:field="character" styleName="{otherStyle.chararter}" />
				</td>
				<td>
					<g:Button text="▶" ui:field="next" />
				</td>
			</tr>
			<tr>
				<td colspan='3'>
					<g:Button ui:field="show" text="Show" />
				</td>
			</tr>
			<tr>
				<td>
				</td>
				<td colspan='3' style="text-align:left" width="80%">
					<d:DefinitionPanel ui:field='definitionPanel'
						width="100%" />

				</td>
				<td>
				</td>
			</tr>
		</table>

	</g:HTMLPanel>
</ui:UiBinder> 