<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:d='urn:import:com.plr.flashcard.client.view.definition'>

	<ui:style>
		.header {
			font-size: 110%;
			font-weight: bold;
			color: #555
		}
		
		.label {
			font-weight: bold;
			width: 75px;
		}
		
		.contactForm {
			height: 400px;
			width: 380px;
		}
	</ui:style>
<g:DecoratorPanel>
	<g:ScrollPanel>
		<g:HTMLPanel height="400px" width="380px">
			<table width="370px">
				<tr>
					<td colspan='2' align='center' class='{style.header}'>
						Character
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						Id:
					</td>
					<td>
						<g:Label ui:field='idLabel' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						Character:
					</td>
					<td>
						<g:Label ui:field='chararterLabel' styleName="chararter" />
					</td>
				</tr>

				<tr>
					<td class='{style.label}'>
						Definition:
					</td>
					<td>
						<d:DefinitionPanel ui:field='definitionPanel' />
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
		</g:ScrollPanel>
	</g:DecoratorPanel>
</ui:UiBinder>
