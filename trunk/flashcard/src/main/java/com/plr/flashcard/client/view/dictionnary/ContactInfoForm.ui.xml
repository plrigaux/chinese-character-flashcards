<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
	ui:generateLocales='default'>

	<ui:style>
		.header {
			font-size: 110%;
			font-weight: bold;
			color: #555
		}
		
		.label {
			font-weight: bold;
		}
	</ui:style>

	<g:DecoratorPanel>
		<g:HTMLPanel>
			<table>
				<tr>
					<td colspan='2' align='center' class='{style.header}'>
						Character
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						Id:
					</td>
					<td>
						<g:Label ui:field='idLabel' />
					</td>
				</tr>
				<tr>
					<td class='{style.label}'>
						Character:
					</td>
					<td>
						<g:Label ui:field='chararterLabel' styleName="chararter" />
					</td>
				</tr>

				<tr>
					<td class='{style.label}'>
						Definition:
					</td>
					<td>
						<g:SimplePanel ui:field='definitionPanel' />
					</td>
				</tr>
			</table>
		</g:HTMLPanel>
	</g:DecoratorPanel>
</ui:UiBinder>
