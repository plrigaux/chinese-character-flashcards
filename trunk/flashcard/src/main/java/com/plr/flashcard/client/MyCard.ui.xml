<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
	</ui:style>
	<g:HTMLPanel>
		<div style="text-align:center">
			<g:Label ui:field="character" />
			<g:Button ui:field="show" text="Show" />
			<g:VerticalPanel ui:field="answer">
			</g:VerticalPanel>
			<g:HorizontalPanel>
				<g:Button text="◀" ui:field="previous" />
				<!-- <span> </span> -->
				
				<g:Button text="▶" ui:field="next" />
			</g:HorizontalPanel>
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 