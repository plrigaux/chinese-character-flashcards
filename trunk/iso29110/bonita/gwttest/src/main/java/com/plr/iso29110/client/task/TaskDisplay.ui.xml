<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:com.plr.iso29110.client.welcome">

	<ui:style>
		.panel {
			margin: 0px auto;
			;
		}
		
		.table-style {
			border: 1px solid black;
		}
	</ui:style>

	<g:HTMLPanel>
		<g:VerticalPanel styleName="{style.panel}" spacing="10">
			<g:HTMLPanel>
				<h2>Task: </h2>
				
				<g:Label ui:field="activityName"></g:Label>
				<g:Label ui:field="activityLabel"></g:Label>
				<g:Label ui:field="activityDescription"></g:Label>
				
				Variables
				<g:FlexTable ui:field="variables" styleName="{style.table-style}" borderWidth="2"/>
				
				
			</g:HTMLPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 




