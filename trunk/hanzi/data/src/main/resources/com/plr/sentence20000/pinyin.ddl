DROP TABLE HANZI;

CREATE TABLE HANZI (
	ID INTEGER GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
	HANZI VARCHAR(1) UNIQUE,
	PRIMARY KEY (ID)
);

DROP TABLE PINYIN;

CREATE TABLE PINYIN (
	ID INTEGER GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
	PINYIN VARCHAR(9) UNIQUE,
	PRIMARY KEY (ID)
);

DROP TABLE HANZI_PINYIN;

CREATE TABLE HANZI_PINYIN(
	HANZI_ID INTEGER ,
	PINYIN_ID INTEGER, 
	PRIMARY KEY (HANZI_ID, PINYIN_ID)
);