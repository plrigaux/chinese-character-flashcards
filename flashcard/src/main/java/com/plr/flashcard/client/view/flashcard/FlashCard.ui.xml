<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d='urn:import:com.plr.flashcard.client.view.definition'
	xmlns:generic="urn:import:org.apache.bcel.generic" xmlns:w="urn:import:com.plr.flashcard.client.view.welcome">
	<ui:style type="com.plr.flashcard.client.view.flashcard.FlashCardStyle">
		.important {
			font-weight: bold;
		}
		
		.enabled {
			display: block;
		}
		
		.disabled {
			display: none;
		}
		
		.panel {
			text-align: center;
		}
		
		.button {
			
			height: 100%;
		}
		
		.showButton {
			width: 100%;
			height: 100%;
		}
		
		.labelPanel {
			margin: 0px auto;
			text-align: center;
		}
		
		.definitionPanel {
			margin: 0px auto;
			text-align: left;
			width: 300px;
		}
	</ui:style>
	<ui:with field='res' type='com.plr.flashcard.client.AppResources' />
	<g:DockLayoutPanel unit='EM'>

		<g:north size='2'>
			<g:HTML></g:HTML>
		</g:north>

		<g:center>
			<g:ScrollPanel>
				<g:HTMLPanel styleName="{style.panel}">
					<div class="{style.labelPanel}">
						<g:Label ui:field="character" />
					</div>

					<div width="100%">
						<d:DefinitionPanel styleName="{style.definitionPanel}" ui:field='definitionPanel' width="300" />
					</div>
				</g:HTMLPanel>
			</g:ScrollPanel>
		</g:center>

		<g:south size='3'>
			<g:HTMLPanel styleName="{style.panel}">
<!-- 				<div ui:field="showDiv" class="{style.enabled}" width="100%" height="100%"> -->
					<w:SVGButton ui:field="show" text="Show" addStyleNames="{style.showButton}" />
<!-- 				</div> -->
				<div ui:field="buttonsDiv" class="{style.disabled}">
					<w:SVGButton ui:field="again" text="Again" />

					<w:SVGButton ui:field="hard" text="Hard" />

					<w:SVGButton ui:field="good" text="Good" />

					<w:SVGButton ui:field="easy" text="Easy" />

					<w:SVGButton ui:field="trivial" text="Trivial" />
				</div>
			</g:HTMLPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 