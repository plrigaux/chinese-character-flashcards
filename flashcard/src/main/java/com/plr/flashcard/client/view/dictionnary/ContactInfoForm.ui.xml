<!DOCTYPE ui:UiBinder SYSTEM 'http://dl.google.com/gwt/DTD/xhtml.ent'>
<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  ui:generateLocales='default'>

  <ui:style>
    .header {
      font-size: 110%;
      font-weight: bold;
      color: #555
    }
    
    .label {
      font-weight: bold;
    }
  </ui:style>

  <g:DecoratorPanel>
    <g:HTMLPanel>
      <table>
        <tr>
          <td
            colspan='2'
            align='center'
            class='{style.header}'>
           Contact Info
          </td>
        </tr>
        <tr>
          <td
            class='{style.label}'>
            First Name:
          </td>
          <td>
            <g:TextBox
              ui:field='firstNameBox' />
          </td>
        </tr>
        <tr>
          <td
            class='{style.label}'>
            Last Name:
          </td>
          <td>
            <g:TextBox
              ui:field='lastNameBox' />
          </td>
        </tr>
      
        <tr>
          <td
            class='{style.label}'>
            Birthday:
          </td>
          <td>
            <d:DateBox
              ui:field='birthdayBox' />
          </td>
        </tr>
        <tr>
          <td
            class='{style.label}'>
            Address:
          </td>
          <td>
            <g:TextArea
              ui:field='addressBox' />
          </td>
        </tr>
        
      </table>
    </g:HTMLPanel>
  </g:DecoratorPanel>
</ui:UiBinder>
