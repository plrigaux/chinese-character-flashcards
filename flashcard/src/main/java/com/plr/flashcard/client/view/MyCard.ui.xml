<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d='urn:import:com.plr.flashcard.client.view.definition'>
	<ui:style>
		.important {
			font-weight: bold;
		}
		
	</ui:style>
	<g:HTMLPanel>
		<div style="text-align:center">
			<g:Label ui:field="character" />
			<g:Button ui:field="show" text="Show" />
			<d:DefinitionPanel ui:field='definitionPanel' />
			<g:HorizontalPanel width="100%">
				<g:Button text="◀" ui:field="previous" />
				<g:Button text="▶" ui:field="next" />
			</g:HorizontalPanel>
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 