<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d='urn:import:com.plr.flashcard.client.view.definition'>
	<ui:style>
		.important {
			font-weight: bold;
		}
		
	</ui:style>
	<g:HTMLPanel>
		<div style="text-align:center">
			<g:Label ui:field="character" />
		
			
			<g:TextBox ui:field='answer' />
			<g:Button ui:field='answerValidate' text="Validate" />
			<d:DefinitionPanel ui:field='definitionPanel' />
			<g:VerticalPanel ui:field='vPanel' />
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 